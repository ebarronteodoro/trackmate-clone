---
import Logo from "../assets/logo.svg";
import UserIcon from "../assets/user-icon.svg";
import ShopIcon from "../components/ShopIcon.astro";
---

<header
  id="header"
  class="fixed top-0 left-0 w-full h-24 flex items-center justify-between px-24 z-20 transition-colors duration-300"
>
  <div class="flex gap-4 items-center">
    <Logo class="size-6 text-white" />

    <a href="/" class="font-poppins-extralight text-2xl font-bold">
      TrackMate
    </a>
  </div>

  <ul class="flex gap-12 items-center">
    <li class="flex items-center">
      <a href="/faq" class="font-questrial">FAQ</a>
    </li>
    <li class="flex items-center">
      <a href="/login" class="flex gap-3 font-questrial">
        <UserIcon class="w-6 text-white" />
        Entrar
      </a>
    </li>
    <li class="flex items-center">
      <a href="/cart-page">
        <ShopIcon class="w-6 h-auto text-white" count="1" />
      </a>
    </li>
    <li class="flex items-center">
      <a
        href="/product-page"
        class="bg-[#a238ff] shadow-[0px_1px_20px_0px_rgba(125,43,196,1)] transition duration-300 hover:bg-white hover:text-black w-36 h-10 flex items-center justify-center rounded-full font-questrial"
      >
        Comprar ahora
      </a>
    </li>
  </ul>
</header>

<script>
  const header = document.getElementById("header");
  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      header?.classList.add(
        "bg-[#222323]",
        "shadow-[0px_0px_15px_7px_rgba(0,0,0,0.5)]",
      );
    } else {
      header?.classList.remove(
        "bg-[#222323]",
        "shadow-[0px_0px_15px_7px_rgba(0,0,0,0.5)]",
      );
    }
  });
</script>
